{
    "name": "decodelabs/eventful",
    "description": "Asynchronous IO event dispatcher",
    "type": "library",
    "keywords": ["events", "io"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",

        "decodelabs/coercion": "^0.2",
        "decodelabs/deliverance": "^0.2",
        "decodelabs/systemic": "^0.9",
        "decodelabs/exceptional": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6"
    },
    "suggest": {
        "ext-event": "Faster and more reliable event loops"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Eventful\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.3.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "ecs": "ecs check --no-progress-bar",
        "ecs-fix": "ecs check --no-progress-bar --fix",
        "lint": "parallel-lint src/ ecs.php",
        "eclint": "eclint check src/ ecs.php",
        "eclint-fix": "eclint fix src/ ecs.php",
        "check": "composer update && composer analyze && composer ecs && composer lint && composer eclint"
    }
}
