{
    "name": "decodelabs/eventful",
    "description": "Asynchronous IO event dispatcher",
    "type": "library",
    "keywords": ["events", "io"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2|^8.0",

        "decodelabs/atlas": "^0.8",
        "decodelabs/systemic": "^0.7",
        "decodelabs/exceptional": "^0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^0.12.45",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.4",
        "symplify/easy-coding-standard": "^8.3"
    },
    "suggest": {
        "ext-event": "Faster and more reliable event loops"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Eventful\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
